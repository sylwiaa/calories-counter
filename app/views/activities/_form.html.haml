- if @activity.errors.present?
  .alert.alert-danger.alert-dismissible.fade.show{:role => "alert"}
    %ul
      - @activity.errors.full_messages.each do |message|
        %li
          %strong= message
        %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
          %span{"aria-hidden" => "true"}

= form_for @activity, html: { multipart: true } do |f|
  %h5 Duration:
  = f.text_field :duration, class: 'form-control'

  %h5 Activity type:
  = f.text_field :activity_type, class: 'form-control'

  %h5 Completed on:
  = f.date_select :completed_on, class: 'form-control'

  %br
  = f.submit "Wy≈õlij", class: 'btn btn-default'
