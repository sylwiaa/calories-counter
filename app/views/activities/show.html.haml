.container.show-activity
  .back= link_to 'Cofnij', activities_path
  %h1 Activity
  = link_to 'Edit activity', edit_activity_path(@activity)
  = link_to "Delete", activity_path(@activity), method: :delete, data: {confirm: 'Are you sure?'}, class: 'delete'
  %table.table.table-bordered
    %thead
      %tr
        %th{:scope => "col"} Duration
        %th{:scope => "col"} Completed on
        %th{:scope => "col"} Activity type
    %tbody
      %tr
        %th= @activity.duration
        %th= @activity.completed_on
        %th= @activity.activity_type
