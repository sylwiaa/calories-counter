.container
  = form_for @meal, html: { multipart: true } do |f|
    %h5 Name:
    = f.text_field :name, class: 'form-control'
    -# %h5 Meal type:
    -# = f.text_field :meal_type, class: 'form-control'
    = f.hidden_field :meal_type
    %br
    %h5 Category:
    = f.text_field :category, class: 'form-control'
    %br
    %h5 Quantity:
    = f.text_field :quantity, class: 'form-control'
    %br
    %h5 Calories:
    = f.text_field :calories, class: 'form-control'
    %br
    %h5 Eaten on:
    = f.date_select :eaten_on, class: 'form-control'
    %br
    = f.submit "Wy≈õlij", class: 'btn btn-default'
