.container
  %h2 Today
  .calories
    %h4 Ilość spożytych kalorii w ciągu dnia:
    = current_user.meals.sum(:calories)
    %span kcal
    .progress
      .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", :role => "progressbar", :style => "width: 60%;"}
        60%

.container
